rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow create: if request.auth != null && request.auth.uid == uid;
      allow read: if request.auth != null && (request.auth.uid == uid || request.auth.token.role == 'admin');
      allow update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false; // prevent deletes for audit
    }

    match /transactions/{txId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.uid || request.auth.token.role == 'admin');
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.uid || request.auth.token.role == 'admin');
    }

    match /predictions/{docId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.uid || request.auth.token.role == 'admin');
      allow create, update: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
